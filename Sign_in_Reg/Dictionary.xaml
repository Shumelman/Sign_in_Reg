<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<!--Базавый стиль для всех-->
    <Style x:Key="BaseStyle" TargetType="Path">
        <Setter Property="Fill" Value="White"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--Для разных размеров-->
    <Style x:Key="DiamondLarge" BasedOn="{StaticResource BaseStyle}" TargetType="Path">
        <Setter Property="Data" Value="M 0,3.5 L 3.5,0 L 7,3.5 L 3.5,7 Z"/>
        <Setter Property="Width" Value="7"/>
        <Setter Property="Height" Value="7"/>
        <Setter Property="Opacity" Value="0.4"/>
    </Style>

    <Style x:Key="DiamondMedium" BasedOn="{StaticResource BaseStyle}" TargetType="Path">
        <Setter Property="Data" Value="M 0,2.5 L 2.5,0 L 5,2.5 L 2.5,5 Z"/>
        <Setter Property="Width" Value="5"/>
        <Setter Property="Height" Value="5"/>
        <Setter Property="Opacity" Value="0.4"/>
    </Style>

    <Style x:Key="DiamondSmall" BasedOn="{StaticResource BaseStyle}" TargetType="Path">
        <Setter Property="Data" Value="M 0,1.5 L 1.5,0 L 3,1.5 L 1.5,3 Z"/>
        <Setter Property="Width" Value="3"/>
        <Setter Property="Height" Value="3"/>
        <Setter Property="Opacity" Value="0.2"/>
    </Style>
    
    <!--Для особых-->
    <Style x:Key="SpeciaDiamondLarge" BasedOn="{StaticResource DiamondLarge}" TargetType="Path">
        <!--Добавить эффекты-->
    </Style>
    
    <Style x:Key="SpecialDiamondMedium" BasedOn="{StaticResource DiamondMedium}" TargetType="Path">
    <!---->
    </Style>

</ResourceDictionary>