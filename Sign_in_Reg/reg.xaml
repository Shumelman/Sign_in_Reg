<Window x:Class="Sign_in_Reg.reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sign_in_Reg"
        mc:Ignorable="d"
        Title="reg" Height="550" Width="800" 
        Background="Transparent" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="20" BorderThickness="0.5" Background="#292929" BorderBrush="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="390"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Height="550">
                <Grid Height="550">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="450"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sign Up" Foreground="#d4d4d4" FontSize="24" Margin="0 0 0 360"
                               Grid.Column="1" Grid.Row="1" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <Label x:Name="Email" Content="Email*" Foreground="#b5b5b5" FontSize="14" 
                           Grid.Column="1" Grid.Row="1" Margin="0,110,0,310" Height="30" Width="50"
                           VerticalContentAlignment="Center" HorizontalAlignment="Left"/>

                    <TextBlock x:Name="emailMessage" Grid.Row="1" Grid.Column="1"
                               Text="Email must end with .com" Height="20"
                               Foreground="Red" FontSize="14"
                               Margin="0,110,0,310" HorizontalAlignment="Right" Visibility="Collapsed"/>
                    <Border Background="#1a1a1a" Grid.Column="1" Grid.Row="1" Height="30" Width="270" CornerRadius="4" Margin="0,140,0,280">
                        <TextBox Background="Transparent" FontSize="13"
                                 BorderBrush="Transparent" Width="260" Height="26" x:Name="EmailBox"
                                 Foreground="#d4d4d4" CaretBrush="#d4d4d4" VerticalContentAlignment="Center" BorderThickness="0" 
                                 PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewSpaceInput" TextChanged="EmailBox_TextChanged"/>
                    </Border>

                    <Label x:Name="User" Content="Username*" Grid.Row="1" Grid.Column="1" Foreground="#b5b5b5" FontSize="14" Height="30" VerticalContentAlignment="Center" Margin="0,180,0,240"/>

                    <Border Grid.Column="1" Grid.Row="1" Background="#1a1a1a" Height="30" Width="270" CornerRadius="4" Margin="0,210,0,210">
                        <TextBox x:Name="UserBox" Background="Transparent" FontSize="13"
                                 Foreground="#d4d4d4" BorderThickness="0" BorderBrush="Transparent" CaretBrush="#d4d4d4" 
                                 VerticalContentAlignment="Center" Height="26" Width="260"
                                 PreviewKeyDown="TextBox_PreviewSpaceInput" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="UserBox_TextChanged"/>
                    </Border>

                    <Label x:Name="Password" Content="Password*" Grid.Row="1" Grid.Column="1" Height="30" Foreground="#b5b5b5" FontSize="14" VerticalContentAlignment="Center"
                           Margin="0,250,0,170"/>

                    <Border Background="#1a1a1a" Grid.Column="1" Grid.Row="1" Height="30" Width="270" CornerRadius="4" Margin="0,280,0,140">
