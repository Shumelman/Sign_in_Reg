                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox Background="Transparent" Foreground="#d4d4d4" BorderBrush="Transparent" BorderThickness="0"
                                     CaretBrush="#d4d4d4" VerticalContentAlignment="Center" HorizontalAlignment="Left" 
                                     Height="26" Width="223" Margin="5 0 0 0" PreviewTextInput="PasswordBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewSpaceInput" Grid.Column="0"
                                     x:Name="passwordBox" FontSize="13" PasswordChanged="passwordBox_PasswordChanged"/>
                            <TextBox x:Name="PasswordTextBox" 
                                     Grid.Column="0" FontSize="14"
                                     Background="Transparent" Foreground="#d4d4d4" 
                                     BorderBrush="Transparent" BorderThickness="0"
                                     CaretBrush="#d4d4d4" VerticalContentAlignment="Center" 
                                     PreviewTextInput="PasswordBox_PreviewTextInput"
                                     PreviewKeyDown="TextBox_PreviewSpaceInput"
                                     Height="26" Width="223" Margin="5 0 0 0" Visibility="Collapsed" TextChanged="passwordTextBox_TextChanged"/>
